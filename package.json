{
  "name": "@faasjs/utils",
  "version": "0.0.0-alpha.0",
  "license": "MIT",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "lint": "tslint -p tsconfig.json --fix",
    "build": "tsc",
    "test": "jest --expand",

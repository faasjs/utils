    "@babel/preset-env": "*",
    "@babel/preset-typescript": "*",
    "@types/debug": "*",
    "@types/jest": "*",
    "@types/node": "*",
    "babel-jest": "*",
    "jest": "*",
    "jsdoc-babel": "*",
    "jsdoc-to-markdown": "*",
    "tslint": "*",
    "typescript": "*"
  },
  "jest": {
    "collectCoverage": true,
    "testPathIgnorePatterns": [
      "/lib/"
    ]
  }
}